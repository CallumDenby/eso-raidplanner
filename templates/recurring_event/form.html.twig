{% extends 'base.html.twig' %}
{% block title %}{{ guild.name }}{% endblock %}
{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                {% if guild.icon is not null %}
                    <img class="avatar rounded-circle"
                         src="{{ guild.getFullIconUrl() }}" width="32"
                         height="32"/>
                {% endif %}
                <a href="{{ path('guild_view', {'guildId': guild.id}) }}">
                    {{ guild.name }}
                </a>
                -
                Recurring Event
            </div>
            <div class="card-body">
                {% if update ?? false %}
                    <div class="alert alert-warning">
                        Please note that recurring events only allow editing of their basic settings. If you wish to change dates and times, please create a new recurring event and delete the old one.
                    </div>
                    <div class="alert alert-info">
                        Please note that changes made will only apply to events that will be created in the future. Existing events will not be modified.
                    </div>
                {% endif %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}